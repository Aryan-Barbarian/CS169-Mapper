</script>



</head>


<body>

<%= render 'welcome/header' %>

<!-- THE STUFF BELOW IS HIDDEN AFTER CLICK -->
<div class="container">
	<div class="row titleText">
		<h1><%= current_user.email %></h1>
	</div>
</div>

<div class="spacer" style="height: 100px"></div>

<div class="container">

	<div class="row">
		<div class="datasetList">
			<ul>
			<% @current_user.datasets.each do |dataset| %>

				<li><%= dataset %>

				<span class="deleteDataset" onclick="myFunction()">
				<%= link_to 'Delete Dataset', dataset, method: :delete %>
				</span></li>

			<% end %>
			</ul>
		</div>
		<script>
			function myFunction() {
			    location.reload();
			}
		</script>
	</div>

</div>

</body>



